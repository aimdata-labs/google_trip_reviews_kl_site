google_1_dtm <- google_rating_words |> 
  filter(rating == 1) |> 
  cast_dtm(rowid, word, n)

google_1_lda <- LDA(google_1_dtm, k = 5, control = list(seed = 133))

google_1_topics <- tidy(google_words_lda, matrix = "beta")

google_1_topics |> 
  group_by(topic) |> 
  slice_max(beta, n = 15) |> 
  ungroup() |> 
  arrange(topic, -beta)

